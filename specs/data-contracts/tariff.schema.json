{
  "$id": "schema/tariff.json",
  "type": "object",
  "required": [
    "supplier",
    "option",
    "puissance_kva",
    "abo_month_ttc",
    "observed_at",
    "parser_version",
    "source_url",
    "source_checksum"
  ],
  "properties": {
    "supplier": {
      "type": "string"
    },
    "option": {
      "enum": [
        "BASE",
        "HPHC",
        "TEMPO"
      ]
    },
    "puissance_kva": {
      "enum": [
        3,
        6,
        9,
        12,
        15,
        18,
        24,
        30,
        36
      ]
    },
    "price_kwh_ttc": {
      "type": [
        "number",
        "null"
      ]
    },
    "price_kwh_hp_ttc": {
      "type": [
        "number",
        "null"
      ]
    },
    "price_kwh_hc_ttc": {
      "type": [
        "number",
        "null"
      ]
    },
    "abo_month_ttc": {
      "type": "number"
    },
    "observed_at": {
      "type": "string",
      "format": "date-time"
    },
    "parser_version": {
      "type": "string"
    },
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "source_checksum": {
      "type": "string",
      "minLength": 64,
      "maxLength": 64
    },
    "data_status": {
      "type": "string",
      "enum": [
        "fresh",
        "verifying",
        "stale",
        "broken"
      ]
    }
  }
}
