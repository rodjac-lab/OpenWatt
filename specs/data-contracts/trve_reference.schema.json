  "properties": {
    "option": {
      "enum": ["BASE", "HPHC", "TEMPO"]
    },
    "puissance_kva": {
      "enum": [3, 6, 9, 12, 15, 18, 24, 30, 36]
    },
    "price_kwh_ttc": {
      "type": ["number", "null"]
    },
    "price_kwh_hp_ttc": {
      "type": ["number", "null"]
    },
    "price_kwh_hc_ttc": {
      "type": ["number", "null"]
    },
    "abo_month_ttc": {
      "type": "number"
    },
    "valid_from": {
      "type": "string",
      "format": "date"
    },
    "valid_to": {
      "type": ["string", "null"],
      "format": "date"
    }
  }
}
